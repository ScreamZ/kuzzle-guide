<% language_tabs = current_page.data.language_tabs %>
<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title><%= current_page.data.title || "API Documentation" %></title>

    <link href='https://fonts.googleapis.com/css?family=Raleway:400,500,600,700,800' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,400italic,600' rel='stylesheet' type='text/css'>
    <%= stylesheet_link_tag :screen, media: :screen %>
    <%= stylesheet_link_tag :print, media: :print %>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <% if current_page.data.search %>
      <%= javascript_include_tag  "all" %>
    <% else %>
      <%= javascript_include_tag  "all_nosearch" %>
    <% end %>

    <% if language_tabs %>
      <script>
        $(function() {
          setupLanguages(<%
            languages = []

            language_tabs.each do |lang|
              if lang.is_a?(Hash)
                if lang.has_key?("tag")
                  languages.push(lang)
                else
                  languages.push({tag: lang.keys.first, label: lang, selector: ".highlight." + lang.keys.first})
                end
              else
                languages.push({tag: lang, label: lang, selector: ".highlight." + lang})
              end
            end
          %><%= languages.to_json %>);
        });
      </script>
    <% end %>
  </head>

  <body class="<%= page_classes %>">
    <header>
      <div class="wrapper">
        <!--<div class="container-logo">
          <img alt="kuzzle logo" width="260px" src="/public/images/Kuzzle_developers_blue.svg">
        </div>-->
        <div id="logo">
            <a href="/">&nbsp;</a>
        </div>

        <nav>
          <ul>
            <li>
              <a href="http://kuzzle.io/" target="" class="nav-item">Home</a>
            </li>

            <li>
              <a href="#" target="" class="nav-item developers">Documentation</a>
            </li>

            <li>
              <a href="http://kuzzle.io/demos-tutorials/" target="_blank" class="nav-item ">Demos</a>
            </li>

            <li>
              <a href="http://kuzzle.io/blog/" target="" class="nav-item ">Blog</a>
            </li>

            <li>
              <a href="https://github.com/kuzzleio/kuzzle" target="_blank" class="nav-item github">
                <i class="icon icon-github icon-small"></i>
              </a>
            </li>

            <!--<li class="nav nav-index"><a href="/"><span>Getting started</span></a></li>
            <li class="nav nav-kuzzle active"><a href="/api-reference"><span>Kuzzle API Reference</span></a></li>
            <li class="nav nav-sdk"><a href="/sdk-documentation"><span>SDK Documentation</span></a></li>-->
          </ul>
        </nav>
      </div>
      <div class="developer-nav open">
        <ul>
            <li class="active"><a href="/guide"><span>Guide</span></a></li>
            <li><a href="/sdk-documentation"><span>SDK Documentation</span></a></li>
            <li><a href="/api-reference"><span>API Reference</span></a></li>
        </ul>
        <div class="search">
          <input type="text" class="search" id="input-search" tabindex="1" placeholder="Search in the guide">
        </div>
      </div>
    </header>

    <div class="container">
      <a href="#" id="nav-button">
        <span>
          NAV
          <%= image_tag('navbar.png') %>
        </span>
      </a>
      <div class="tocify-wrapper">
        <% if language_tabs %>
          <div class="lang-selector">
            <% languages.each do |lang| %>
              <a href="#" data-language-name="<%= lang.tag %>"><%= lang.label %></a>
            <% end %>
          </div>
        <% end %>
        <% if current_page.data.search %>
          <ul class="search-results"></ul>
        <% end %>
        <div id="toc">
        </div>
        <% if current_page.data.toc_footers %>
          <ul class="toc-footer">
            <% current_page.data.toc_footers.each do |footer| %>
              <li><%= footer %></li>
            <% end %>
          </ul>
        <% end %>
      </div>
      <div class="page-wrapper">
        <div class="dark-box"></div>
        <div class="content">
          <%= yield %>
          <% current_page.data.includes && current_page.data.includes.each do |include| %>
            <%= partial "includes/#{include}" %>
          <% end %>
        </div>
        <div class="dark-box">
          <% if language_tabs %>
            <div class="lang-selector">
              <% languages.each do |lang| %>
                <a href="#" data-language-name="<%= lang.tag %>"><%= lang.label %></a>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <script>
      ((window.gitter = {}).chat = {}).options = {
        room: 'kuzzleio/kuzzle'
      };
    </script>
    <script src="https://sidecar.gitter.im/dist/sidecar.v1.js" async defer></script>
  </body>
</html>
